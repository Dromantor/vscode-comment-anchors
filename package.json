{
	"name": "comment-anchors",
	"displayName": "Comment Anchors",
	"description": "Place anchor tags within comments for easy file navigation",
	"version": "1.2.0",
	"publisher": "ExodiusStudios",
	"engines": {
		"vscode": "^1.24.0"
	},
	"categories": [
		"Other"
	],
	"icon": "media/icon.png",
	"galleryBanner": {
		"color": "#005dc1",
		"theme": "dark"
	},
	"homepage": "https://github.com/ExodiusStudios/vscode-comment-anchors/blob/master/README.md",
	"repository": {
		"url": "https://github.com/ExodiusStudios/vscode-comment-anchors",
		"type": "git"
	},
	"contributes": {
		"commands": [
			{
				"command": "commentAnchors.parse",
				"title": "Comment Anchors: Parse the current file and look for anchors"
			},
			{
				"command": "commentAnchors.toggle",
				"title": "Comment Anchors: Toggle the visibility of tag highlights"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "comment-anchors",
					"title": "Comment Anchors",
					"icon": "res/icon.svg"
				}
			]
		},
		"views": {
			"comment-anchors": [
				{
					"id": "anchorsList",
					"name": "Anchors list"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "commentAnchors.parse",
					"when": "view == anchorsList",
					"group": "operations"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Comment Anchors configuration",
			"properties": {
				"commentAnchors.tagHighlights.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Whether to highlight the anchor tags",
					"scope": "window"
				},
				"commentAnchors.parseDelay": {
					"type": "number",
					"default": 200,
					"description": "The delay between stopping with typing and anchors being reloaded. When you experience hangs or freezes, it is recommended to increase this value",
					"scope": "window"
				},
				"commentAnchors.tags.displayInSidebar": {
					"type": "boolean",
					"default": true,
					"description": "Whether to display tag names in the sidebar",
					"scope": "window"
				},
				"commentAnchors.tags.displayInGutter": {
					"type": "boolean",
					"default": true,
					"description": "Whether to display tags in the gutter",
					"scope": "window"
				},
				"commentAnchors.tags.list": {
					"type": "array",
					"default": [
						{"tag": "ANCHOR", "iconColor": "default", "highlightColor": "#A8C023"},
						{"tag": "TODO", "iconColor": "blue", "highlightColor": "#3ea8ff"},
						{"tag": "FIXME", "iconColor": "red", "highlightColor": "#F44336"},
						{"tag": "STUB", "iconColor": "purple", "highlightColor": "#BA68C8"},
						{"tag": "NOTE", "iconColor": "orange", "highlightColor": "#FFB300"},
						{"tag": "REVIEW", "iconColor": "orange", "highlightColor": "#64DD17"}
					],
					"items": {
						"type": "object",
						"required": ["tag"],
						"properties": {
							"tag": {
								"type": "string",
								"description": "The text to match for this tag"
							},
							"iconColor": {
								"type": "string",
								"enum": [
									"default",
									"red",
									"purple",
									"green",
									"orange",
									"blue"
								],
								"default": "default",
								"description": "The icon for this tag in the sidebar"
							},
							"highlightColor": {
								"type": "string",
								"description": "The foreground color applied to the anchor"
							},
							"backgroundColor": {
								"type": "string",
								"description": "The background color applied to the anchor"
							},
							"styleComment": {
								"type": "boolean",
								"description": "When true, highlights the comment as well"
							},
							"borderStyle": {
								"type": "string",
								"description": "The style applied to the border, see https://www.w3schools.com/cssref/pr_border.asp for more information"
							},
							"borderRadius": {
								"type": "number",
								"description": "The curvature radius of the applied border (Requires borderStyle to be set)",
								"default": 0
							},
							"isBold": {
								"type": "boolean",
								"description": "Sets whether the tag is rendered in bold",
								"default": true
							},
							"isItalic": {
								"type": "boolean",
								"description": "Sets whether the tag is rendered in italics",
								"default": true
							}
						}
					},
					"description": "List of comment anchor tags",
					"scope": "window"
				}
			}
		}
	},
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/debounce": "^1.0.0",
		"@types/mocha": "^2.2.42",
		"@types/node": "^7.0.43",
		"typescript": "^2.6.1",
		"vscode": "^1.1.6"
	},
	"dependencies": {
		"debounce": "^1.1.0"
	}
}
